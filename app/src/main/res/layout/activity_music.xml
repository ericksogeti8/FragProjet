<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/action_Chanson"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="That Was Just Your Life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:textSize="16sp"
        android:padding="20dp"/>



   <TableLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/action_Chanson"
       android:stretchColumns="1"
       android:padding="2dp"
       >
       <TableRow>
           <TextView
               android:text="Song duration :"
               android:textSize="14sp"
               android:padding="2dp"
               android:textStyle="bold"
               android:textColor="@android:color/holo_purple"
               />

           <TextView
               android:id="@+id/song_Duration"
               android:text=".../..."
               android:textColor="@android:color/black"
               android:textSize="20sp"
               android:padding="2dp"
               android:textStyle="bold"/>
       </TableRow>
       <TableRow>
           <TextView
           android:text="Artiste :"
           android:textSize="14sp"
           android:padding="2dp"
           android:textStyle="bold"
           android:textColor="@android:color/holo_purple"
           />

           <TextView
               android:id="@+id/action_Artiste"
               android:text=".../..."
               android:textColor="@android:color/black"
               android:textSize="20sp"
               android:padding="2dp"
               android:textStyle="bold"/>
       </TableRow>

       <TableRow>
       <TextView

           android:text="Album :"
           android:textSize="14sp"
           android:padding="2dp"
           android:textStyle="bold"
           android:textColor="@android:color/holo_purple"
           />
           <TextView
               android:id="@+id/action_Album"
               android:textColor="@android:color/black"
               android:text=".../..."
               android:textSize="20sp"
               android:padding="2dp"
               android:textStyle="bold"/>

        </TableRow>
        <TableRow>
           <TextView
               android:text="Favori :"
               android:textSize="18sp"
               android:padding="2dp"
               android:textStyle="bold"
               android:textColor="@android:color/holo_purple"
               />

            <RadioGroup
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/action_Oui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@android:color/holo_purple"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="Oui"
                    android:saveEnabled="false"/>
                <RadioButton
                    android:id="@+id/action_Non"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="Non "
                    android:saveEnabled="false"/>
            </RadioGroup>


       </TableRow>
       <LinearLayout
           android:padding="60dp"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">

           <Button
               android:id="@+id/action_Stream"
               android:layout_width="160dp"
               android:layout_height="wrap_content"
               android:padding="12dp"
               android:layout_marginLeft="40dp"
               android:text=" Play "
               android:background="@android:color/holo_purple"
               android:textColor="@android:color/white"
               android:textStyle="bold"/>

       </LinearLayout>

    </TableLayout>

    <Button
        android:id="@+id/ButtonPreced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/ic_media_previous"/>

    <Button
        android:id="@+id/action_Deezer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deezer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
